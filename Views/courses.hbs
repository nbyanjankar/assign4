<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <h1 class="display-4 text-white animated zoomIn">Courses</h1>
            
        </div>
    </div>
</div>
<div class="container">
    <div class="card custom-table">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Course Code</th>
                                <th>Course Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           {{#each courses}}
                                <tr>
                                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                                    <td>{{courseDescription}}</td>
                                    <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a></td>
                                </tr>
                                {{/each}}
                        </tbody>
                    </table>
                </div>
                {{#unless courses}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
</div>
